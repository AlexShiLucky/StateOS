#include <stm32f4_discovery.h>
#include <os.h>

auto led = Led();
auto sig = Signal();

void slave()
{
	for (;;)
	{
		sig.wait();
		led.tick();
	}
}

void master()
{
	for (;;)
	{
		ThisTask::sleepFor(SEC);
		sig.give();
	}
}

int main()
{
	auto sla = Task(0, slave);  sla.start();
	auto mas = Task(0, master); mas.start();

	ThisTask::sleep();
}
