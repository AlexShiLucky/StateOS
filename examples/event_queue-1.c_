#include <stm32f4_discovery.h>
#include <os.h>

OS_EVQ(evq, 1);

void slave()
{
	unsigned x;

	for (;;)
	{
		x = evq_wait(evq);
		LEDs = x;
	}
}

void master()
{
	unsigned x = 15;

	for (;;)
	{
		tsk_delay(SEC);
		evq_give(evq, x++);
	}
}

OS_WRK(sla, 0, slave,  256);
OS_WRK(mas, 0, master, 256);

int main()
{
	LED_Init();

	tsk_start(sla);
	tsk_start(mas);
	tsk_stop();
}
