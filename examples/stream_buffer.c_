#include <stm32f4_discovery.h>
#include <os.h>

OS_STM(stm, sizeof(unsigned));

OS_TSK_DEF(sla, 0)
{
	unsigned x;

	for (;;)
	{
		stm_wait(stm, &x, sizeof(x));
		LEDs = x;
	}
}

OS_TSK_DEF(mas, 0)
{
	unsigned x = 15;

	for (;;)
	{
		tsk_delay(SEC);
		stm_send(stm, &x, sizeof(x));
		x++;
	}
}

int main()
{
	LED_Init();

	tsk_start(sla);
	tsk_start(mas);
	tsk_sleep();
}
