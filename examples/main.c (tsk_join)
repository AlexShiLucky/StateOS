#include <stm32f4_discovery.h>
#include <os.h>

OS_TSK(sla, 0, slave);
OS_TSK(mas, 0, master);

void slave()
{
	static unsigned time = 0;

	tsk_sleepUntil(time += SEC);
	tsk_stop();
}

void master()
{
	tsk_start(sla);
	tsk_join(sla);

	LED_Tick();
}

int main()
{
	LED_Init();

	tsk_start(mas);
	tsk_join(mas);
}
