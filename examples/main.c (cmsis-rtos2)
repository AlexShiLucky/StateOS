#include <stm32f4_discovery.h>
#include <cmsis_os2.h>

osSemaphoreId_t sem;

void slave(void *arg)
{
	(void) arg;

	for (;;)
	{
		osSemaphoreAcquire(sem, osWaitForever);
		LED_Tick();
	}
}

void master(void *arg)
{
	(void) arg;

	for (;;)
	{
		osDelay(1000);
		osSemaphoreRelease(sem);
	}
}

int main(void)
{
	LED_Config();
	osKernelInitialize();
	sem = osSemaphoreNew(1, 0, NULL);
	osThreadNew(slave,  NULL, NULL);
	osThreadNew(master, NULL, NULL);
	osKernelStart();
	osThreadExit();
}
