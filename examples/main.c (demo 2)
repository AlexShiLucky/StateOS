#include <stm32f4_discovery.h>
#include <os.h>

void proc(volatile unsigned *led, unsigned timePoint)
{
	for (;;)
	{
		tsk_sleepUntil(timePoint += SEC/2);
		(*led)++;
	}
}

OS_DEF(t1, 0, 256) { proc(&LED[0], SEC/8*0); }
OS_DEF(t2, 0, 256) { proc(&LED[1], SEC/8*1); }
OS_DEF(t3, 0, 256) { proc(&LED[2], SEC/8*2); }
OS_DEF(t4, 0, 256) { proc(&LED[3], SEC/8*3); }
OS_DEF(t5, 0, 256) { proc(&GRN,    SEC/8*4); }

int main()
{
    LED_Config();
    GRN_Config();
	
	tsk_start(t1);
	tsk_start(t2);
	tsk_start(t3);
	tsk_start(t4);
	tsk_start(t5);
	tsk_stop();
}
